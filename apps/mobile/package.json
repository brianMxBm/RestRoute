{
  "private": true,
  "name": "@rest-route/app-mobile",
  "version": "1.0.0",
  "main": "index",
  "scripts": {
    "dev": "expo start",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "eas-build-post-install": "bun run -w build:mobile"
  },
  "dependencies": {
    "@expo/metro-runtime": "^3.2.1",
    "expo": "^51.0.17",
    "expo-constants": "~16.0.2",
    "expo-dev-client": "~4.0.19",
    "expo-linking": "~6.3.1",
    "react-native-vector-icons": "10.2.0",
    "expo-router": "~3.5.23",
    "expo-status-bar": "~1.12.1",
    "@rnmapbox/maps": "10.1.31",
    "expo-updates": "~0.25.18",
    "nativewind": "^4.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.2",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.11",
    "tailwindcss": "^3.4.14"
  },
  "devDependencies": {
    "@rest-route/eslint-config": "workspace:*",
    "@babel/core": "^7.24.5",
    "@types/react": "~18.2.79",
    "@types/react-dom": "~18.2.25",
    "babel-preset-expo": "~11.0.11"
  },
  "eslintConfig": {
    "extends": "@rest-route/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
